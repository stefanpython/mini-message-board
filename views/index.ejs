<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

    <div class="messageboard">
      <h1><%= title %></h1>

      <% messages.forEach(item => { %>
        <div class="card border-primary mb-3" >
          <div class="card-header"><%= item.user %> said:</div>
          <hr>
          <div class="card-body">
            <p class="card-text"><%= item.text %> &nbsp;<span>- Posted: <%= item.added %></span></p>
          </div>
        </div>
      <% }) %>
      
      <a href="/new">Add message</a>
    </div>
    
  </body>
</html>
